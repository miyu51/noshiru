<div class="max-w-5xl mx-auto px-4">
  <% if @noshis.present? %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 space-y-6">
      <% @noshis.each do |noshi| %>
        <div class="shadow rounded overflow-hidden w-full">
          <div class="flex flex-col">
            <div class="p-6 flex flex-col space-y-10">
              <%= render 'noshi_bookmarks/noshi_bookmark_button', noshi: noshi %>
              <%= link_to noshi_path(noshi) do %>
                <div class="text-3xl text-white text-center"><%= noshi.label %></div>
                <div class="w-full relative z-19">
                  <%= image_tag noshi.image, class: "w-full h-auto object-cover" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <P class="mt-5 text-white text-center text-3xl">ブックマークされた熨斗はまだありません。</p>
  <% end %>
</div>
