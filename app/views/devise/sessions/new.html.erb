<div class="flex flex-col lg:flex-row justify-center items-center w-full px-4 py-8 space-y-8 lg:space-y-0 lg:space-x-12 z-10">
  <!-- 画像セクション（非表示 on モバイル） -->
  <div class="hidden lg:block pt-3 w-1/2 ml-auto lg:flex justify-center">
    <%= image_tag 'login.png', class: "w-[80%] h-[80%] rounded-lg" %>
  </div>

  <div class="bg-white w-full md:w-2/3 px-6 py-10 shadow-md rounded-lg">
    <p class="text-2xl mb-4 text-center text-zinc-800">ログイン</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, "メールアドレス", class: "block mb-1 text-zinc-800" %>
        <%= f.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "example@example.com" %>
      </div>
      <div class="mb-4">
        <%= f.label :password, "パスワード", class: "block mb-1 text-zinc-800" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500", placeholder: "6文字以上で入力してください。" %>
      </div>
      <%= f.submit "ログイン", class: "w-full text-white bg-sky-600 py-2 rounded-full hover:bg-red-400 hover:text-white transition" %>
    <% end %>

    <div class="flex justify-center space-x-6 mt-6">
      <%= link_to "パスワードをお忘れの方はこちら", new_user_password_path, class: "text-sm text-zinc-800 hover:underline mt-6 block" %>
      <%= link_to "新規登録はこちら", new_user_registration_path, class: "text-sm text-zinc-800 hover:underline mt-6 block" %>
    </div>
  </div>

  <div class="mt-2">
    <div class="text-center text-white">Coming Soon...</div>
    <button class="gsi-material-button mt-2 items-center justify-center" onclick="location.href='/users/auth/google_oauth2'">
      <div class="gsi-material-button-state"></div>
      <div class="gsi-material-button-content-wrapper">
        <div class="gsi-material-button-icon">
          <svg version="1.1" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" xmlns:xlink="http://www.w3.org/1999/xlink" style="display: block;">
            <path fill="#EA4335" d="M24 9.5c3.54 0 6.71 1.22 9.21 3.6l6.85-6.85C35.9 2.38 30.47 0 24 0 14.62 0 6.51 5.38 2.56 13.22l7.98 6.19C12.43 13.72 17.74 9.5 24 9.5z"></path>
            <path fill="#4285F4" d="M46.98 24.55c0-1.57-.15-3.09-.38-4.55H24v9.02h12.94c-.58 2.96-2.26 5.48-4.78 7.18l7.73 6c4.51-4.18 7.09-10.36 7.09-17.65z"></path>
            <path fill="#FBBC05" d="M10.53 28.59c-.48-1.45-.76-2.99-.76-4.59s.27-3.14.76-4.59l-7.98-6.19C.92 16.46 0 20.12 0 24c0 3.88.92 7.54 2.56 10.78l7.97-6.19z"></path>
            <path fill="#34A853" d="M24 48c6.48 0 11.93-2.13 15.89-5.81l-7.73-6c-2.15 1.45-4.92 2.3-8.16 2.3-6.26 0-11.57-4.22-13.47-9.91l-7.98 6.19C6.51 42.62 14.62 48 24 48z"></path>
            <path fill="none" d="M0 0h48v48H0z"></path>
          </svg>
        </div>
        <span class="gsi-material-button-contents">Googleでログイン</span>
        <span style="display: none;">Googleでログイン</span>
      </div>
    </button>
  </div>
</div>
