<div class="mt-12 border-t border-white pt-6 pb-8">
  <div class="flex justify-center gap-6">
    <%= link_to "https://twitter.com/intent/tweet?url=#{CGI.escape(request.original_url)}", target: "_blank", rel: "noopener noreferrer" do %>
      <%= image_tag "x-logo", alt: "Twitterで共有", class: "w-6 h-6 opacity-80 hover:opacity-100 transition-opacity" %>
    <% end %>

    <%= link_to "https://social-plugins.line.me/lineit/share?url=#{CGI.escape(request.original_url)}", target: "_blank", rel: "noopener noreferrer" do %>
      <%= image_tag "line-logo", alt: "LINEで共有", class: "w-6 h-6 opacity-80 hover:opacity-100 transition-opacity" %>
    <% end %>
  </div>
</div>

