<div class="container mx-auto max-w-4xl px-4 py-8">
  <div class="text-center mb-8">
    <small class="text-blue-100 text-sm">
      <%= @column.created_at.strftime("%Y年%m月%d日 %H:%M") %>
    </small>
    <h1 class="text-4xl font-bold text-white mt-2 mb-6 border-b border-t border-yellow-200 p-4">
      <%= @column.title %>
    </h1>
  </div>
    
  <div class="prose prose-lg prose-invert max-w-none text-white">
    <%= raw @column.text %>
  </div>
</div>
