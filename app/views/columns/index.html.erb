<div class="flex flex-col text-white">
  <div class="flex items-center">
    <div class="flex items-center">
      <%= image_tag 'usamark1.png', class: "w-[30px] h-[30px]" %>
      <span>: 未ブックマーク状態</span>
    </div>
  </div>
  <div class="flex items-center mt-2">
    <div class="flex items-center">
      <%= image_tag 'usamark2.png', class: "w-[30px] h-[30px]" %>
      <span>: ブックマーク済み</span>
    </div>
  </div>
</div>
<div class="max-w-5xl mx-auto px-4">
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 space-y-6">
    <% @columns.each do |column| %>
      <div id="column-id-<%= column.id %>" class="shadow rounded overflow-hidden w-full">
        <div class="flex flex-col">
          <div class="p-6 flex flex-row space-y-10">
            <%= render partial: 'column_bookmarks/column_bookmark_button', locals: { column: column } %>
            <%= link_to column_path(column) do %>
              <div class="text-3xl text-white text-center"><%= column.title %></div>
            <% end %>
          </div>
          <div class="w-full relative overflow-hidden">
            <%= link_to column_path(column) do %>
              <%= image_tag "#{column.thumbnail}", class: "w-full h-full object-cover" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
