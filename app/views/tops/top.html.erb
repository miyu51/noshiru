<div class="flex flex-col flex-grow items-center space-y-10 py-10 justify-center max-w-screen mx-auto relative z-10">
<!-- スライドショー -->
  <div class="w-full overflow-hidden h-auto relative z-10">
    <ul class="flex justify-center gap-4 slide-items">
      <% @latest_columns.each do |column| %>
        <li class="w-1/3 h-[300px] md:h-[400px]">
          <%= link_to column_path(column), class: "block w-full h-full" do %>
            <div class="text-xl text-center text-white mb-2"><%= column.title %></div>
            <%= image_tag "#{column.thumbnail}", class: "w-full h-full object-cover", alt: column.title %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= render 'shared/search' %>
</div>
<div class="flex flex-col text-white">
  <div class="flex items-center">
    <div class="flex items-center">
      <%= image_tag 'usamark1.png', class: "w-[30px] h-[30px]" %>
      <span>: 未うさまーく状態</span>
    </div>
  </div>
  <div class="flex items-center mt-2">
    <div class="flex items-center">
      <%= image_tag 'usamark2.png', class: "w-[30px] h-[30px]" %>
      <span>: うさまーく済み</span>
    </div>
  </div>
</div>
<%= render 'search' %>
